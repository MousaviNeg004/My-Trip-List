<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ir.shariaty.mytriplist">

    <!-- فقط برای انتخاب عکس از گالری لازم است -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" tools:targetApi="33" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />

    <!-- تنظیم آلارم -->
    <uses-permission android:name="android.permission.SET_ALARM" />

    <!-- نوتیفیکیشن (Android 13+) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyTripList"
        tools:targetApi="31">

        <!-- کانال پیش‌فرض FCM (اگر از Messaging استفاده می‌کنی) -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="@string/default_notification_channel_id" />

        <!-- سرویس پیام‌رسان فایربیس (اگر لازم داری نگه‌دار) -->
        <service
            android:name=".MyFirebaseMessagingService"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <!-- اکتیویتی‌ها -->
        <activity android:name=".MainActivity" android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity2" android:exported="false" />
        <activity android:name=".HomeActivity" android:exported="false" />
        <activity android:name=".ToDoListActivity" android:exported="false" />
        <activity android:name=".ItemTaskActivity" android:exported="false" />
        <activity android:name=".LoginActivity" android:exported="false" />
        <activity android:name=".SignUpActivity" android:exported="false" />
        <activity
            android:name=".AlarmActivity"
            android:exported="false"
            android:theme="@style/Theme.MyTripList.AlarmOverlay"
            android:showWhenLocked="true"
            android:turnScreenOn="true" />
        <activity android:name=".GoogleSignInActivity" android:theme="@style/GoogleSignInDialogTheme" />

        <!-- دریافت‌کننده آلارم -->
        <receiver
            android:name=".AlarmReceiver"
            android:enabled="true"
            android:exported="false" />
    </application>
</manifest>